<div class="fullvw-wrapper">
	{{add-feed-tabs header-text="ADD A TRANSIT FEED" submitted=false upload-tab-class="tab" add-operator-tab-class="tab" license-tab-class="tab-current" submit-tab-class="tab" submitted=false}}
</div>

<div>
	{{add-feed-blurb blurb-text="Need blurb for add license form instructions."}}
</div>
<div class="container input-form">
	<div class="row">
		<div class="col-sm-7 col-xs-12 input-section">
			<div class="input-form-label">License name</div>
			<div class="input-form-field" {{input type="text" class="form-control" value=operator.name}}>e.g. Creative Commons 2.0</div>
		</div>
		<div class="col-sm-5 col-xs-12 input-section">
			<div class="input-form-label">License URL</div>
			<div class="input-form-field" {{input type="text" class="form-control" value=operator.short_name}}>http://...</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12 col-xs-12 input-form-guide input-section">Pick the license restrictions. Select 'Unknown'if you are not sure.
		</div>
	</div>

	<div class="col-sm-12 col-xs-12 row input-section">
		<div class="input-form-label">Attribution for feed data
	        <div class="btn-group" data-toggle="buttons">
	                <button class="btn btn-default" type="button" value="Optional" {{action "setAttribution" "optional"}}> Optional</button>
	                <button class="btn btn-default" type="button" value="Required" {{action "setAttribution" "required"}}> Required</button>
	                <button class="btn btn-default" type="button" value="Unknown" {{action "setAttribution" "unknown"}}> Unknown</button>
	        </div>
        </div>
				{{#if showLicenseAttributionText}}
					<div class="input-form-label">Attribution text:</div>
					{{textarea value=model.license_attribution_text placeholder="e.g., Using data copyright (C) Bay Area Rapid Transit"}}
				{{/if}}
	</div>

	<div class="col-sm-12 col-xs-12 row input-section">
		<div class="input-form-label">Creation of derived data products
			<div class="btn-group" data-toggle="buttons">
	                <button class="btn btn-default" type="button" value="Permitted" {{action "setCreateDerived" "permitted"}}> Optional</button>
	                <button class="btn btn-default" type="button" value="Not Permitted" {{action "setCreateDerived" "not permitted"}}> Required</button>
	                <button class="btn btn-default" type="button" value="Unknown" {{action "setCreateDerived" "unknown"}}> Unknown</button>
	        </div>
        </div>
	</div>
	<div class="col-sm-12 col-xs-12 row input-section">
		<div class="input-form-label">Redistribution of feed as-is
	        <div class="btn-group" data-toggle="buttons">
	                <button class="btn btn-default" type="button" value="Optional" {{action "setRedistribute" "optional"}}> Optional</button>
	                <button class="btn btn-default" type="button" value="Required" {{action "setRedistribute" "required"}}> Required</button>
	                <button class="btn btn-default" type="button" value="Unknown" {{action "setRedistribute" "unknown"}}> Unknown</button>
	        </div>
        </div>
	</div>


</div>

<br>
<div align=left>
{{#link-to "feeds.new.index" class="btn btn-default" role="button"}}
  Back
{{/link-to}}
</div>
<div align=right>
	<a class="btn btn-default" role="button" {{action "submit"}}>SUBMIT FEED ></a>
</div>
