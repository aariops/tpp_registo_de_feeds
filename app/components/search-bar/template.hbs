{{#power-select
  selected=placeOrName
  options=placesAndNames
  autofocus="autofocus"
  onopen=(action "findPlacesAndNames")
  placeholder="Search by operator name or location"
  searchPlaceholder="Type to filter..."
  onchange=(action "setPlaceOrName")
  as |placeOrName|
}}
  {{placeOrName}}
{{/power-select}}

{{#if placeOrName}}
  <div class="filterInfoContainer">
    <div class="filterInfoSubcontainer">
      <div class="filterInfo">There {{#if multipleOperators}}are{{else}}is{{/if}} currently <strong>{{totalOperators}}</strong> operator{{#if multipleOperators}}s{{/if}} available in the Transitland Datastore for <strong>{{placeOrName}}</strong>.</div>
    </div>
  </div>
{{/if}}
