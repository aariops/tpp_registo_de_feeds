<div class="container input-form">
	<div class="row">
		<div class="col-sm-12 col-xs-12 input-section">
			<div class="input-form-label">Include this operator?</div>
				<div class="input-form-field">
			    <!-- <div class="btn-group" data-toggle="buttons"> -->
			    	<!-- {{operator-form/include-operator-select}} -->
					{{#if isIncluded}}
						<button class="btn btn-default {{if isIncluded "active"}}" type="button" {{action "clickYes"}}>Yes</button>
<button class="btn btn-default" type="button" {{action "clickNo" message="yes"}}>No</button>
					{{else}}
						<button class="btn btn-default" type="button" {{action "clickYes"}}>Yes</button>
						<button class="btn btn-default {{unless isIncluded "active"}}" type="button" {{action "clickNo" message="No"}}>No</button>
					{{/if}}
				<!-- </div> -->
		    </div>
  		</div>
	</div>
	<div class="row">
		<div class="col-sm-12 col-xs-12 input-section">
			<div class="input-form-label">Operator full name</div>
			<div class="input-form-field">{{input type="text" value=operator.name placeholder="e.g. Bay Area Rapid Transit"}}</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6 col-xs-12 input-section">
			<div class="input-form-label">Operator short name (optional)</div>
			<div class="input-form-field">{{input type="text" value=operator.short_name placeholder="e.g. BART"}}</div>
		</div>
		<div class="col-sm-6 col-xs-12 input-section">
			<div class="input-form-label">Website</div>
			<div class="input-form-field">{{input type="text" value=operator.website placeholder="http://somethinguseful.com"}}</div>
		</div>
	</div>
	<div class="row">
		{{operator-form/country-region-select countryName=operator.country regionName=operator.state}}
		<div class="col-sm-4 col-xs-12 input-section">
			<div class="input-form-label">Municipality/Region</div>
			<div class="input-form-field">{{input type="text" value=operator.metro placeholder="e.g. Oakland"}}</div>
  		</div>
	</div>

</div>
<div class="form-caption">
	For operators that spread across multiple cities, metros, or states, specify the operator headquarters
</div>
